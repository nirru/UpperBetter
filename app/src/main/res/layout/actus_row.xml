<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/parent_row">


    <ImageView
        android:id="@+id/source_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/placeholder"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/source_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/selected_text_color"
        android:text="HARASSMENT"
        android:textSize="12sp"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/source_logo"
        android:layout_centerVertical="true"
        android:gravity="center|left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a8b2be"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>