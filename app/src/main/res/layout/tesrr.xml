<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5.0"
    android:paddingTop="@dimen/padding_10"
    android:paddingBottom="@dimen/padding_10">

    <RelativeLayout
        android:id="@+id/tab_first"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/first_tab_icob"
            android:layout_width="@dimen/tab_icon_width"
            android:layout_height="@dimen/tab_icon_height"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/position"/>

        <TextView
            android:id="@+id/position_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_position_title"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/first_tab_icob"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/selected_text_color"
            android:textAllCaps="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_fifth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/fifth_tab_icob"
            android:layout_width="@dimen/tab_icon_width"
            android:layout_height="@dimen/tab_icon_height"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/inscription"/>

        <TextView
            android:id="@+id/inscripus_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="@string/tab_position_title"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fifth_tab_icob"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/selected_text_color"
            android:textAllCaps="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/second_tab_icon"
            android:layout_width="@dimen/tab_icon_width"
            android:layout_height="@dimen/tab_icon_height"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_tab_second_unselected_option"/>

        <TextView
            android:id="@+id/alert_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_alert_title"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/second_tab_icon"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/unselected_text_color"
            android:textAllCaps="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_third"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

            <ImageView
                android:id="@+id/third_tab_icon"
                android:layout_width="@dimen/third_tab_icon_width"
                android:layout_height="@dimen/third_tab_icon_height"
                android:scaleType="fitCenter"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_tab_third_unselected_option"/>

            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/third_tab_icon"
                android:textSize="13sp"
                android:visibility="visible"
                android:textColor="@color/selected_text_color"
                android:text=""/>

            <TextView
                android:id="@+id/reports_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/third_tab_icon"
                android:layout_marginTop="12dp"
                android:text="@string/tab_reports_title"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/unselected_text_color"
                android:textAllCaps="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_fourth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/fourth_tab_icon"
            android:layout_width="@dimen/third_tab_icon_width"
            android:layout_height="@dimen/third_tab_icon_height"
            android:scaleType="fitCenter"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_tab_fourth_unselected_option"/>

        <TextView
            android:id="@+id/counter_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fourth_tab_icon"
            android:textSize="13sp"
            android:visibility="visible"
            android:textColor="@color/selected_text_color"
            android:text=""/>

        <TextView
            android:id="@+id/actus_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fourth_tab_icon"
            android:layout_marginTop="12dp"
            android:text="@string/tab_actus_title"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/unselected_text_color"
            android:textAllCaps="true"/>

    </RelativeLayout>

</LinearLayout>